@model AlertViewModel
@{ 
  ViewBag.Title = "Alert";
  ViewBag.SubTitle = "example";
}
@section Heading { @ViewBag.Title }
@section SubHeading { @ViewBag.SubTitle }
@using(Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
{
  @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
  @Html.AntiForgeryToken()
  @Html.EditorForModel()
  <div class="form-group">
    <div class="@EditorTemplateConfiguration.DefaultConfiguration.EditorOffsetClass @EditorTemplateConfiguration.DefaultConfiguration.EditorClass">
      <input class="btn btn-primary" type="submit" value="Submit" />
    </div>
  </div>
}
@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
}