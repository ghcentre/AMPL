@model string

@{
    object htmlAttributes =
        ViewData.ModelMetadata.IsReadOnly
            ? (object)new {
                @type = "tel",
                @class = "form-control",
                @placeholder = ViewData.ModelMetadata.Watermark,
                @readonly = "readonly"
            }
            : (object)new {
                @type = "tel",
                @class = "form-control",
                @placeholder = ViewData.ModelMetadata.Watermark
            };
}

@Html.TextBox("", Model ?? "", htmlAttributes)